プロフィール編集
  <div class = "container">
      <div class = "text-right">
          <%= link_to "個人情報を編集する", profile_public_user_path(current_user.id) %>
      </div>
      <%= image_tag @user.get_profile_image(200,200) %>
    
    <%= form_with model:@user, url: public_user_path(current_user.id), method: :patch do |f| %>
    
    <lebel for="inputImage">プロフィール写真</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    <div class ="row">
        <lebel for="inputUsername">ユーザーネーム</label>
            <%= f.text_field :user_name, placeholder: "名前" %>
    </div>
    <div class ="row">
        <lebel for="inputIntroduction">プロフィール文</label>
            <%= f.text_field :introduction, placeholder: "自己紹介文" %>
    </div>
    <%= f.submit"変更を保存" %>
    <% end %>
  </div>
