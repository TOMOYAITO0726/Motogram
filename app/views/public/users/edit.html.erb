プロフィール編集
  <div class = "container">
      <div class = "text-right">
          <%= link_to "個人情報を編集する", profile_public_user_path(current_user.id) %>
      </div>
      <div class ="row">
          <%= image_tag @user.get_profile_image(200,200) %>
      </div>
    <%= form_with model:@user, url: public_user_path(current_user.id), method: :patch do |f| %>
    <div class ="row">
        プロフィール写真
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <div class ="row">
        ユーザーネーム
            <%= f.text_field :user_name, placeholder: "名前" %>
    </div>
    <div class ="row">
        プロフィール文
        <%= f.text_area :introduction, placeholder: "自己紹介文",rows:'5', style: "width: 300px;" %>
    </div>
    <%= f.submit"変更を保存" %>
    <% end %>
  </div>
