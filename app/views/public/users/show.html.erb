<div>
    <%= @user.user_name %>
    <%= @user.introduction %>
    <%= image_tag @user.get_profile_image(100,100) %>
</div>

<% @post.each do |post| %>
<div>
    <%= link_to public_user_path(post.id) do %>
        <%= image_tag post.get_image(100,100) %>
    <% end %>
    <%#= image_tag post.user.get_profile_image(100,100) %>
    <%= post.caption %>
</div>
<% end %>


 