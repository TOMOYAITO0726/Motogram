<h1>検索画面</h1>
<%= form_with url: admin_search_path, local: true, method: :get do |f| %>
  <%= f.text_field :word %>
  <%= f.select :range, options_for_select([['User'],['Post']]) %>
  <%= f.submit "検索", class: "btn btn-primary" %>
<% end %>

<h1>検索結果</h1>
 <table class="table table-hover table-inverse">
   <% if @range == "User" %>
     <% @users.each do |user| %>
        <%= link_to admin_user_path(user.id) do %>
           <%= image_tag user.get_profile_image(50,50) %>
           <%= user.user_name %>
        <% end %> 
     <% end %>
   <% elsif @range =="Post"%>
     <% @posts.each do |post| %>
         <%= link_to admin_post_path(post.id) do %>
           <%= image_tag post.get_image(100,100) %>
         <% end %>
     <% end %>
   <% end %>
 </table>  